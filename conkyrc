conky.config = {
    alignment = 'bottom_right',
    background = true,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=10',
    gap_x = 25 ,
    gap_y = 25,
    minimum_height = 5,
    minimum_width = 200,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_argb_visual = true,
    own_window_transparent = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    update_interval = 1.0,
    use_spacer = 'none',
}

conky.text = [[
$alignc$nodename
$alignc$color$uptime
$hr
${color grey}CPU Frequency:$color $freq_g GHz
${color grey}CPU Usage:$color $cpu%
${color grey}CPU Temp:$color ${exec sensors | grep 'Package' | cut -c17-18}°C
${color grey}Processes:$color $processes ($running_processes)
$hr
${color grey}RAM:$color $mem / $memmax
$hr
${color grey}GPU Frequency:$color ${nvidia gpufreq} MHz
${color grey}GPU Usage:$color ${nvidia gpuutil}%
${color grey}GPU Temp:$color ${nvidia temp}°C
]]
